<div class="page-container" style="@Style">
    <div class="page-title-container" hidden="@string.IsNullOrEmpty(Title)">
        <h1>@Title</h1>
    </div>
    <div class="@(EnableContentContainer ? "page-content-container" : null)">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public bool EnableContentContainer { get; set; } = true;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Style { get; set; }
}