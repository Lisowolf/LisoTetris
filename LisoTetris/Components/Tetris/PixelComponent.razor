@using Engine;

@switch (State)
{
    case PixelStates.Nothing:
        <div class="pixel" />
        break;
    case PixelStates.Filled:
        <div class="pixel pixel-filled" />
        break;
    case PixelStates.CurrentBlock:
        <div class="pixel pixel-current-block" />
        break;
}

@code {
    [Parameter] public PixelStates State { get; set; }
}